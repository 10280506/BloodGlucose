<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/activity_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        />

    <RelativeLayout
        android:id="@+id/activity_main_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_navigation_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation"
        >

        <LinearLayout
            android:id="@+id/activity_main_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/activity_navigate_button_bottom_margin"
            android:layout_marginLeft="@dimen/activity_navigate_button_margin"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_main_measure_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/measure_sel"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/activity_main_measure_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/measure"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/blue"
                android:textSize="18sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_main_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/activity_navigate_button_bottom_margin"
            android:layout_marginRight="@dimen/activity_navigate_button_margin"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_main_settings_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/settings"
                />

            <TextView
                android:id="@+id/activity_main_settings_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_1"
                android:textSize="18sp"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>