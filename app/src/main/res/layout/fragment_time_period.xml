                    android:layout_marginLeft="25dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/target_line1" />

            <RelativeLayout
                android:id="@+id/fragment_period_bedtime"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/select_bedtime_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/select_bedtime_img"
                    android:text="@string/bedtime"
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/select_bedtime_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bedtime" />

                <ImageView
                    android:id="@+id/fragment_period_bedtime_sel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:src="@drawable/select"
                    android:layout_marginLeft="25dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/target_line1" />

            <RelativeLayout
                android:id="@+id/fragment_period_after_snacks"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/select_after_snacks_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/select_after_snacks_img"
                    android:text="@string/after_snacks"
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/select_after_snacks_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
